<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.masum_billah.tourguide">
    <application
        android:allowBackup="true"
        android:icon="@drawable/tour_guide_logo"
        android:label="@string/app_name"
        android:roundIcon="@drawable/tour_guide_logo"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name=".TourGuideDetailsActivity"
            android:label="@string/title_activity_tour_guide_details"
            android:theme="@style/AppThemeWithActionBar">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value=".MainActivity" />
        </activity>

         <activity android:name=".MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

</manifest>